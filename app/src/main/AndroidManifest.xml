<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.readitapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AchievementsActivity"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".ChallengesActivity"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".HomepageActivity"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".AvailableQuizzesActivity" />
        <activity android:name=".ChallengesInDetailActivity" />
        <activity android:name=".QuizStartActivity" />
        <activity android:name=".MultipleChoiceActivity" />
        <activity android:name=".BookListActivity" />
        <activity android:name=".QuizEndActivity" />
        <activity android:name=".BookDetailsActivity" />
        <activity android:name=".AllBadgesActivity"></activity>
    </application>

</manifest>